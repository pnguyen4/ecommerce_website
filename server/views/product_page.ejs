<%- include("partials/header.ejs");                                         %>
<%- include("partials/nav.ejs");                                            %>

    <main class="container">
        <div class="row center">
<%        if (!product) {                                                   %>
            <div class="col">
            Sorry, No Items Found! Msg: <%= error %>
            </div>
<%        } else {                                                          %>
                <div class="col-xl-3">
                    <img class="h-50" src="<%= product.image_uri %>">
                </div>
                <div class="col">
                    <p><%= product.name %> <%# TODO: make good looking page %></p>
                    <p><%= product.description %></p>
                    <p>$ <%= product.price %></p>
                    <p><%= product.brand %></p>
                    <p><%= product.type  %></p>
<%              if (!favorited && req.user) {                               %>
                    <button id="favorite">Favorite</button>
                    <script src="/public/js/favorite.js"></script>
<%              } else if (req.user){                                       %>
                    <button id="unfavorite">Unfavorite</button>
                    <script src="/public/js/unfavorite.js"></script>
<%              }                                                           %>
<%        }                                                                 %>
            </div>
        </div>
    </main>
<%- include("partials/footer.ejs"); %>
